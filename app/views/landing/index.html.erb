<div id="landing">
  <div id="landing-caption">
    <h1 class="display-3">FlipBuy</h1>
    <p>You want it, they sell it.</p>
    <% if user_signed_in? %>
      <h4><%= current_user.username %></h4>
    <% else %>
      <%= button_to('Get Started', new_user_registration_path, :method => :get, :class => 'btn btn-large btn-success') %>
    <% end %>
  </div>
</div>

<section id="marketplace">
  <%= render partial: "landing/marketplace" %>
</section>
